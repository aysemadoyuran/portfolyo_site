@using entitylayer.Concrete
@model List<usermessage> 
<div class="col-md-6 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title">Okunmamış Son 5 Mesaj</h4>
                <p class="text-muted mb-1 small">Tümünü Görüntüle</p>
            </div>
            <div class="preview-list">
                @foreach (var item in Model)
                {
                    if (item.Status == true)
                    {
                        <div class="preview-item border-bottom">
                            <div class="preview-thumbnail">
                                <img src="assets/images/faces/face6.jpg" alt="image" class="rounded-circle" />
                            </div>
                            <div class="preview-item-content d-flex flex-grow">
                                <div class="flex-grow">
                                    <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                        <h6 class="preview-subject">@item.Title</h6>
                                        <p class="text-muted text-small">@item.Date</p>
                                    </div>
                                    <p class="text-muted">@item.Content.Substring(0,10) ...</p>
                                </div>
                            </div>
                        </div>
                    }


                }

            </div>
        </div>
    </div>
</div>
