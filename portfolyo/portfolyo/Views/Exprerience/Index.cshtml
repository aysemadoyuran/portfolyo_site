@using entitylayer.Concrete
@model List<exprerience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<!-- Light table -->
@*yeni*@
<div class="page-header">
    @*<h3 class="page-title">Deneyim Listesi </h3>*@
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyim Listesi</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Deneyim Başlığı</th>
                            <th scope="col" class="sort" data-sort="status">Tarih</th>
                            <th scope="col" class="sort" data-sort="status">Açıklama</th>
                            <th scope="col">Sil</th>
                            <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>
                                    @item.exprerienceID
                                </th>
                                <td class="budget">
                                    @item.Name
                                </td>
                                <td>
                                    @item.Date
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td><a href="/Exprerience/DeleteExprerience/@item.exprerienceID" class="btn btn-outline-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a></td>
                                <td><a href="/Exprerience/EditExprerience/@item.exprerienceID" class="btn btn-outline-warning">Düzenle</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a href="/Exprerience/AddExprerience/" class="btn btn-outline-success">Yeni Deneyim Ekle</a>
        </div>
    </div>

</div>



