<div class="col-md-12 grid-margin stretch-card">

    <div class="card">
        @using (Html.BeginForm("AddPortfolio", "Portfolio", FormMethod.Post))
        {
            <div class="card-body">
                <h4 class="card-title">Proje Ekle</h4>
                <p class="card-description"> Proje Bilgileri </p>

                @Html.HiddenFor(x => x.portfolioID)
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Proje Adı:</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Name)
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Görsel 1:</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.ImageUrl)
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Görsel 2:</label>
                        @Html.TextBoxFor(x => x.ImageUrl2, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.ImageUrl2)
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Proje Linki:</label>
                        @Html.TextBoxFor(x => x.ProjectUrl, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-outline-success">Proje Ekle</button>
                    </div>
                </div>
                <br />


            </div>
        }
